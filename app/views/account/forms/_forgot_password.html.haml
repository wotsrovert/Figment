.flash
	
- form_tag '/forgot_password', :class => 'xhr' do
	%fieldset
		%p
			%label{ :for => "email" } Your Email:
			= text_field_tag 'email', '', :size => 30, :id => "forgotten_email"

		%p.submit
			= submit_tag 'Submit'

	.otherOptions
		%p.forgotPassword 
			Just remembered it?	
			= link_to "Click here to login.", login_url, :class => 'xhr'
		- if @current_act.allow_signups?
			%p.signUp 
				Haven't signed up yet?	
				= link_to "Click here to sign up.", signup_url, :class => 'xhr'
