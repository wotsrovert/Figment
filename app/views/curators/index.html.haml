#curators.index
  %h1 Curators

  - if @users.any?
    %table
      %thead
        %tr
          %th= sort_link "ID", :id
          %th= sort_link "Name", :name
          %th= sort_link "Email", :email
          %th Last Logged In
          %th
    
      %tbody
        - for u in @users
          %tr
            %td= link_to u.id, curator_path( u )
            %td= link_to u.name, curator_path( u )
            %td= u.email
            %td= u.last_logged_in_at
            %td= link_to "edit", edit_user_path( u )

  - else
    %p
      None found :(
    
  = link_to "Add curator", new_curator_path