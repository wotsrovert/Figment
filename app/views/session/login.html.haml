.login
  %h2 Log in
  - form_tag login_path do
    %fieldset
      = render :partial => '/session/login_form'

  .otherOptions
    %p.forgotPassword
      = link_to "Forgot your password?", forgot_password_path

    %p.signUp
      Haven't signed up yet? 
      = link_to "Click here to sign up.", signup_path
