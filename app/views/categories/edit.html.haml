#categories.member
  
  %h1 Add a Project Category
  
  - form_for @category do |f|
    - f.p( :name ) do
      = f.label :name
      = f.text_field :name
      = f.msg_on :name
    
    %p.submit
      = submit_tag "Submit"
      = link_to "Cancel", categories_path
    
    %p.delete
      = link_to "Delete this Category", @category, :method => :delete, :confirm => "Are you sure?"